@import 'GGS-config' unless $column is defined and $outer-margin is defined

/*
*
*  Eight-column grid active
*  ----------------------------------------------------------------------
*  Margin   | #  1     2     3     4     5     6     7     8   |   Margin
*  5.55555% | %  12.5  25.0  37.5  50.0  62.5  75.0  87.5  100 | 5.55555%
*
*
*/
/* @media screen and (min-width: 720px) */
@media screen and (min-width:  45em)
    debug('min-width: 45em/720px (8 columns)')

    body
        /* Reset baseline grid to 16/16 = 1 */
        font-size   1em

    #twoway
        .wrapper
            float   left
            width   50%


/* @media screen and (min-width: 888px) */
@media screen and (min-width: 55.5em)
    debug('min-width: 55.5em/888px (8 columns)')

    body
        /* Zoom baseline grid to 17/16 = 1.0625 */
        font-size   1em * ((1+$font-size)/$font-size)


/* @media screen and (min-width 984px) */
@media screen and (min-width:  61.5em)
    debug('min-width: 61.5em/984px (8 columns)')

    body
        /* Reset baseline grid to 16/16 = 1.0 */
        font-size   1em

    header
    #twoway
        margin      0 unit((3 * $column), '%')

//    div[ role="main" ]
//      margin-left 12.5%


/* @media screen and (min-width: 1200px) */
@media screen and (min-width:  75em)
    debug('min-width: 75em/1200px (8 columns)')

    body
        /* Zoom baseline grid to 17/16 = 1.0625 */
        font-size   1em * ((1+$font-size)/$font-size)

/* @media screen and (min-width: 1392px) */
@media screen and (min-width:  87em)
    debug('min-width: 87em/1392px (8 columns)')

    body
        /* Reset baseline grid to 16/16 = 1.0 */
        font-size   1em

    header
    #twoway
        margin  0 $column*5 /*  27.77777777777778% */


/* @media screen and (min-width: 1680px) */
@media screen and (min-width:  105em)
    debug('min-width: 105em/1680px (8 columns)')

    body
        /* Zoom baseline grid to 17/16 = 1.0625 */
        font-size   1em * ((1+$font-size)/$font-size)