@import 'GGS-config' unless $column is defined and $outer-margin is defined

/*!
*
*    Consistency fixes
*    adopted from
*
*    http//necolas.github.com/normalize.css/
*
*/
html
    height  100%
    vendor(text-size-adjust, 100%, only: webkit ms, ignore: moz o official)


body
    min-height  100%
    font-size   100%


article
aside
details
figcaption
figure
footer
header
hgroup
nav
section
audio
canvas
video
    display block


sub
sup
    font-size       75%
    line-height     0
    position        relative
    vertical-align  baseline

sup
    top -0.5em


sub
    bottom  -0.25em


pre
    white-space pre
    white-space pre-wrap
    word-wrap   break-word


b
strong
    font-weight bold


abbr[title]
    border-bottom   1px dotted


input
textarea
button
select
    margin          0
    font-size       100%
    line-height     normal
    vertical-align  baseline


//  Un-Stylus-like selector used to keep fidelity with original CSS
button
html input[type="button"]
input[type="reset"]
input[type="submit"]
        cursor      pointer
        vendor(appearance, button, only:webkit, ignore:moz o ms official)


input
    &[type="checkbox"]
    &[type="radio"]
        box-sizing(border-box, ignore:null)


textarea
    overflow    auto


table
    border-collapse collapse
    border-spacing  0
